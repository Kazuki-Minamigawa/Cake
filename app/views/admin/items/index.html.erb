<h1>商品一覧</h1>

<%= link_to new_admin_item_path do %>
  <h2>⊕</h2>
<% end %>

<table>
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>商品価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.no_tax_price %></td>
      <td><%= item.genre.name %></td>
      <td><%= item.is_sold %></td>
    </tr>
  <% end %>
</table>
