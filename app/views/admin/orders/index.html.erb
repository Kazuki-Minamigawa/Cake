<h1>注文履歴一覧</h1>
<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order.id) %></td>
      <td><%= order.end_user.first_name %><%= order.end_user.last_name %></td>
      <td><%= order.order_details.sum(:item_amount) %></td>
      <td><%= order.ordered_process_i18n %></td>
    </tr>
  <% end %>

</table>
